{
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "lib": ["es2022"],
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "composite": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true
  }
}
