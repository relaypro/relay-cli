{
  "extends": [
    "oclif",
    "oclif-typescript",
    "prettier",
    "plugin:eslint-comments/recommended"
  ],
  "plugins": [
    "promise"
  ],
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "log",
          "error",
          "warn",
          "info",
          "time",
          "timeEnd"
        ]
      }
    ],
    "no-trailing-spaces": "error",
    "quotes": [
      "error",
      "backtick",
      {
        "avoidEscape": true
      }
    ],
    "node/no-unpublished-import": "off"
  }
}
